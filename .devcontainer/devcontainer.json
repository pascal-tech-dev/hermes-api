{
    "name": "Hermes API Dev Container",
    "dockerComposeFile": ["docker-compose.yml"],
    "service": "hermes-api",
    
    "workspaceFolder": "/workspace/${localWorkspaceFolderBasename}",
    "runServices": ["hermes-api", "hermes-db", "hermes-rabbitmq"],
    "customizations": {
      "vscode": {
          "settings": {
          "go.formatTool": "gofmt",
          "go.lintTool": "golangci-lint"
        },
        "extensions": [
            "golang.go",
            "ms-azuretools.vscode-docker",
            "esbenp.prettier-vscode",
            "golangci-lint.vscode-golangci-lint", // Recommended: Go linter integration
        ]
      }
    },
    "remoteUser": "vscode",
    "postCreateCommand": "go version && go env",
    "remoteEnv": {
        "GOPATH": "/go"
    }
}